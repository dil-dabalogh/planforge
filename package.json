{
  "name": "planforge",
  "version": "1.0.0",
  "description": "PlanForge - Project Planning and JIRA Integration Tool",
  "main": "src/index.html",
  "scripts": {
    "start": "npx http-server src -p 8080 -o",
    "dev": "npx http-server src -p 8080 -o -c-1",
    "serve": "python3 -m http.server 8080",
    "proxy": "node src/proxy-server.js",
    "start-with-proxy": "concurrently \"npm run proxy\" \"npm start\"",
    "dev-with-proxy": "concurrently \"npm run proxy\" \"npm run dev\"",
    "build": "node build.js",
    "build:standard": "node -e \"require('./build.js').createDistribution(false)\"",
    "build:obfuscated": "node -e \"require('./build.js').createDistribution(true)\"",
    "build:dist": "npm run build && npx http-server dist -p 8081 -o",
    "deploy:prepare": "npm run build && echo 'Distribution ready in ./dist folder'"
  },
  "keywords": [
    "project-management",
    "planning",
    "jira",
    "timeline",
    "gantt"
  ],
  "author": "PlanForge Team",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "http-server": "^14.1.1",
    "javascript-obfuscator": "^4.1.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
